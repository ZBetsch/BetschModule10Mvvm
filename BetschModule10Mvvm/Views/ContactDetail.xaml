<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetschModule10Mvvm.Views.ContactDetail"
             xmlns:vm="clr-namespace:BetschModule10Mvvm.Models.ViewModels"
             x:DataType="vm:ContactsListViewModel"
             Title="ContactDetail">
    <StackLayout Padding="10">
        <Label Text="Name" />
        <Entry Text="{Binding Contact.ContactName, Mode=TwoWay}" />

        <Label Text="Email" />
        <Entry Text="{Binding Contact.ContactEmail, Mode=TwoWay}" />

        <Label Text="Phone" />
        <Entry Text="{Binding Contact.ContactPhone, Mode=TwoWay}" />

        <Label Text="Description" />
        <Editor Text="{Binding Contact.ContactDescription, Mode=TwoWay}" HeightRequest="100"/>

        <Button Text="Save" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>